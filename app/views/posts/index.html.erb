<table>
   <tr>
     <th>id</th>
     <th>Titulo</th>
     <th>Categoria</th>
     <th>Comentario</th>
     <th>likes</th>
   </tr>
<tr>
<% @posts.each do |post| %>
    <td><%= post.id %></td>
	<td><%= post.title %></td>
	<td><%= post.category %></td>
	<td><%= post.text %></td>
	<td><%= post.like %></td>
	<td>
		<a href="/posts/<%= post.id %>">Editar</a>
		<a href="/posts/delete/<%= post.id %>">Borrar</a>
		<a href="/posts/like/<%= post.id %>">like</a>
	</td>
	</tr>

<% end %>

</table>

